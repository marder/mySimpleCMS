<div class="container">
  <h1 class="display-3 py-5">Zawartość bloga</h1>
  <div class="row my-4">
    <div class="col-lg-18">
      <div>
        <% if (locals.message) { %>
          <div class="my-4 alert alert-dismissible fade show alert-<%= locals.message.type %>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
            <%= locals.message.message %>
          </div>
          <% } %>
            <table id="table" class="table table-striped table-sm">
              <thead>
                <tr class="table-light">
                  <th scope="col">Data</th>
                  <th scope="col">Tytuł</th>
                  <th scope="col">Autor</th>
                  <th scope="col">Akcja</th>
                </tr>
              </thead>
              <tbody>
                <% posts.forEach(post=> { %>
                  <tr>
                    <td class="p-2">
                      <%= post.createdAt.toLocaleString('pl-PL', { timeZone: 'UTC' }) %>
                    </td>
                    <td class="p-2">
                      <% if ((post.title).length> 90) { %> <%= post.title.substring(0,90) %>... <% } else { %>
                            <%= post.title %>
                              <% } %>
                    </td>
                    <td class="p-2">
                      <%= post.author %>
                    </td>
                    <td>
                      <a href="/edit/<%= post._id %>" class="text-success"><button class="btn btn-success btn-sm">
                          <i class="fas fa-edit fa-lg mx-1"></i></button></a>
                      <%- include('./deleteForm', { url: `/${post._id}` }) %>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
      </div>
    </div>
  </div>
</div>